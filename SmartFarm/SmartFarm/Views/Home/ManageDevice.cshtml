                  <option value="3212123">Water pumper (x:26, y:-22)</option>
                </select>
              </div>

              <div class="mb-3 form-group">
                <span class="form__label">Vị trí: </span>
                <div class="coordinate-group">
                  <label for="coordinate-x">X</label>
                  <input
                    type="text"
                    value="0"
                    id="coordinate-x"
                    name="coordinate-x"
                  />
                </div>
                <div class="coordinate-group">
                  <label for="coordinate-y">Y</label>
                  <input
                    type="text"
                    value="0"
                    id="coordinate-y"
                    name="coordinate-y"
                  />
                </div>
              </div>
              <div class="mb-5">
                <span class="form__label">Thiết lập: </span>
                <div class="threshold">
                  <span class="threshold-max-title">Max</span>
                  <span class="threshold-min-title">Min</span>
                  <span class="threshold__subject">Nhiệt độ (&#8451;): </span>
                  <input type="text" class="threshold__value" name="temp-max" />
                  <input type="text" class="threshold__value" name="temp-min" />
                  <span class="threshold__subject">Độ ẩm (%):</span>
                  <input type="text" class="threshold__value" name="temp-max" />
                  <input type="text" class="threshold__value" name="temp-min" />
                  <span class="threshold__subject">Thời gian kiểm tra:</span>

                  <select
                    name="checked_time"
                    class="form__input threshold__checked-time"
                  >
                    <option value="300">5 phút</option>
                    <option value="600">10 phút</option>
                    <option value="1800">30 phút</option>
                    <option value="3600">1 tiếng</option>
                  </select>
                </div>
              </div>
              <button class="button button-primary mx-auto my-0">Thêm</button>
