                  <option value="Input">Input</option>
                  <option value="Output">Output</option>
                </select>
              </div>
              <div class="mb-3 form-group">
                <label for="devices" class="form__label">Thiết bị:</label>
                <select name="devices" id="devices" class="form__input">
                  <option value="DHT11">DHT11</option>
                  <option value="Temperature sensor">Temperature sensor</option>
                </select>
              </div>
              <div class="mb-3 form-group">
                <label for="outputs" class="form__label">Output kết nối:</label>
                <select name="outputs" id="outputs" class="form__input">
